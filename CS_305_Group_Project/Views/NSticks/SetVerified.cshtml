@model CS_305_Group_Project.Models.ApplicationUser
@{
    ViewBag.Title = "VerifiedUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Verify User</h2>

<p>
    Are you sure you want to change this user's verification status?
</p>

<ul>
    <li>UserName: @Model.UserName</li>
    <li>User Email: @Model.Email</li>
    <li>User Name: @Model.FirstName @Model.LastName</li>
</ul>

@using (Html.BeginForm("PerformVerification", "NSticks", FormMethod.Post))
{

    @Html.HiddenFor(m => m.Id)
    <input type="submit" class="btn btn-danger" value="Change Verification" />
    @Html.ActionLink("Cancel", "SecurityUsers")
}
