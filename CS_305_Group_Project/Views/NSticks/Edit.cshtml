@model CS_305_Group_Project.Models.NStick
@{
    ViewBag.Title = "Change a report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Update", "NSticks", FormMethod.Post, new { @class = "form" }))
{
    <div class="form-group">
        
        @Html.LabelFor(m => m.TimeStuck)
        @Html.TextBoxFor(m => m.TimeStuck, new { @class = "form-control", @Value = Model.TimeStuck, type = "datetime-local", required = "required"})

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Location)
        @Html.TextAreaFor(m => m.Location, new { @class = "form-control", rows = 1, required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
    </div>

    @Html.HiddenFor(m => m.Id)

    <input type="submit" class="btn btn-primary" value="Save" />
    @Html.ActionLink("Cancel", "Index")
}