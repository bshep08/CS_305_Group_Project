@model CS_305_Group_Project.Models.NStick
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<p>
    Are you sure you would like to delete this video?
</p>
<ul>
    <li>Time Stuck: @Model.TimeStuck</li>
    <li>Description: @Model.Description</li>
</ul>

@using (Html.BeginForm("PerformDelete", "NSticks", FormMethod.Post))
{

    @Html.HiddenFor(m => m.Id)
    <input type="submit" class="btn btn-danger" value="Yes, Delete it!" />
    @Html.ActionLink("Cancel", "Index")
}