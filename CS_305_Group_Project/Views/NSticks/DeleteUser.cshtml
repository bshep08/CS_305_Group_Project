@model CS_305_Group_Project.Models.ApplicationUser
@{
    ViewBag.Title = "DeleteUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete User</h2>

<p>
    Are you sure you want to delete this user?
</p>

<p>
    If you delete this user, their reported sticks will
    remain in the database until those are also deleted.
</p>

<ul>
    @{

    <li>Time Stuck: First:@Model.FirstName Last:@Model.LastName</li>
    <li>Description: Email:@Model.Email UserName:@Model.UserName</li>
        }
</ul>

@using (Html.BeginForm("PerformDeleteUser", "NSticks", FormMethod.Post))
{

    @Html.HiddenFor(m => m.Id)
    <input type="submit" class="btn btn-danger" value="Delete User" />
    @Html.ActionLink("Cancel", "Index")
}